.content {
  height: 100vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  color: white;
}
.content .login-header {
  background-color: #1B21F3;
  padding: 10px 20px;
  margin-bottom: 10px;
}
.content .login-header .header-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}
.content .login-header .header-top .daka-logo .logo-title {
  font-size: 30px;
  font-weight: 500;
}
.content .login-header .header-top .daka-logo .logo-info {
  font-weight: 300;
  font-size: 16px;
}
.content .login-header .header-bottom {
  display: flex;
  align-items: center;
}
.content .login-header .header-bottom .user-avatar {
  box-sizing: border-box;
  height: 50px;
  width: 50px;
  border-radius: 50%;
  border: 2px solid white;
}
.content .login-header .header-bottom .user-info {
  flex: 1;
  overflow: hidden;
  margin-left: 10px;
  display: flex;
  flex-direction: column;
}
.content .login-header .header-bottom .user-info .name {
  font-weight: 500;
  font-size: 16px;
  line-height: 21px;
}
.content .login-header .header-bottom .user-info .adr {
  font-weight: 400;
  font-size: 10px;
  line-height: 13px;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.content .t-block {
  color: black;
  border-top: 5px solid #1B21F3;
  margin-bottom: 20px;
  font-size: 15px;
}
.content .t-block .b-option {
  padding: 8px 20px;
  background-color: #f5f5f5;
  margin-bottom: 4px;
}