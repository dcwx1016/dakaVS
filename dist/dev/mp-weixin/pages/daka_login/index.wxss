.login-page {
  height: 100vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  color: white;
}
.login-page .login-header {
  background-color: #1B21F3;
  justify-content: space-between;
  display: flex;
  align-items: center;
  padding: 10px 20px;
}
.login-page .login-header .title {
  align-self: flex-end;
}
.login-page .login-header .daka-logo .logo-title {
  font-size: 30px;
  font-weight: 500;
}
.login-page .login-header .daka-logo .logo-info {
  font-weight: 300;
  font-size: 16px;
}
.login-page .login-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #737373;
}
.login-page .login-body .daka-slogan .s-logo {
  display: flex;
  justify-content: space-around;
}
.login-page .login-body .daka-slogan .s-logo image {
  width: 80px;
  height: 80px;
  padding-top: 4px;
  border-top: 5px solid #1B21F3;
}
.login-page .login-body .daka-slogan .s-info {
  margin: 20px 0;
  text-align: center;
  font-weight: 200;
  font-size: 10px;
}
.login-page .login-body .daka-option {
  width: 100%;
  display: flex;
}
.login-page .login-body .daka-option button {
  border-radius: 0;
  width: 100px;
  line-height: 30px;
}
.login-page .login-body .daka-option .confirm {
  background: #1B21F3;
  color: white;
}